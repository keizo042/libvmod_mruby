varnishtest "Test mruby vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import mruby from "${vmod_topbuild}/src/.libs/libvmod_mruby.so";

	sub vcl_deliver {
		set resp.http.hello = mruby.hello("World");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
}

client c1 -run
